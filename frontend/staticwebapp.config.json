{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/bundles/*",
      "/assets/*",
      "/favicon.ico",
      "/favicon.svg",
      "/manifest.json",
      "/robots.txt",
      "/ads.txt",
      "/sitemap.xml",
      "/*.js",
      "/*.css",
      "/google*.html"
    ]
  },
  "globalHeaders": {
    "cache-control": "no-cache, no-store, must-revalidate",
    "pragma": "no-cache",
    "expires": "0"
  },
  "routes": [
    {
      "route": "/index.html",
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "route": "/",
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate"
      }
    }
  ]
}