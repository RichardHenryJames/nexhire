{
  "name": "refopen-frontend",
  "version": "1.0.0",
  "description": "RefOpen Job Platform - Universal React Native App",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web --output-dir web-build --clear && node scripts/postbuild-web.js",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "deploy:web": "npm run build:web && swa deploy --app-location . --output-location web-build",
    "deploy:azure": "npm run build:web && az staticwebapp deploy --name refopen-frontend-web --resource-group refopen-dev-rg --source ./web-build",
    "test": "jest",
    "test:frontend": "powershell -ExecutionPolicy Bypass -File ../test-frontend.ps1",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf web-build dist node_modules/.cache",
    "preview": "npm run build:web && npx serve web-build",
    "analyze": "npm run build:web && npx bundle-analyzer web-build/static/js/*.js",
    "dev": "cp .env.dev .env && expo start --dev-client",
    "dev:web": "cp .env.dev .env && expo start --web",
    "dev:android": "cp .env.dev .env && expo start --android",
    "dev:ios": "cp .env.dev .env && expo start --ios",
    "staging": "cp .env.staging .env && expo start",
    "staging:web": "cp .env.staging .env && expo start --web",
    "staging:build": "cp .env.staging .env && expo build:web",
    "prod": "cp .env.prod .env && expo start --no-dev --minify",
    "prod:web": "cp .env.prod .env && expo start --web --no-dev --minify",
    "prod:build": "cp .env.prod .env && expo build:web --no-dev --minify",
    "build": "expo build:web",
    "build:dev": "npm run dev && expo build:web",
    "build:staging": "npm run staging:build",
    "build:prod": "npm run prod:build",
    "env:switch": "node scripts/switch-env.js",
    "env:status": "node scripts/env-status.js",
    "env:validate": "node scripts/validate-env.js"
  },
  "dependencies": {
    "@expo/vector-icons": "~14.0.4",
    "@microsoft/signalr": "^10.0.0",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-community/datetimepicker": "8.2.0",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@react-navigation/stack": "^7.8.0",
    "axios": "^1.6.0",
    "dotenv": "^17.2.3",
    "expo": "~52.0.0",
    "expo-auth-session": "~6.0.3",
    "expo-clipboard": "~7.0.1",
    "expo-constants": "~17.0.8",
    "expo-crypto": "~14.0.2",
    "expo-device": "~7.0.3",
    "expo-document-picker": "~13.0.3",
    "expo-file-system": "~18.0.12",
    "expo-image": "~2.0.7",
    "expo-image-picker": "~16.0.6",
    "expo-linear-gradient": "~14.0.2",
    "expo-linking": "~7.0.5",
    "expo-notifications": "~0.29.14",
    "expo-print": "~14.0.3",
    "expo-router": "~4.0.22",
    "expo-secure-store": "~14.0.1",
    "expo-sharing": "~13.0.1",
    "expo-status-bar": "~2.0.1",
    "expo-updates": "~0.27.5",
    "expo-web-browser": "~14.0.2",
    "html2pdf.js": "^0.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-native": "0.76.9",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-razorpay": "^2.3.1",
    "react-native-reanimated": "~3.16.1",
    "react-native-render-html": "^6.3.4",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-svg": "15.8.0",
    "react-native-web": "~0.19.6",
    "react-native-webview": "13.12.5",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^1.1.7",
    "@babel/core": "^7.20.0",
    "@testing-library/react-native": "^11.5.4",
    "@types/react": "~18.3.12",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^8.57.0",
    "glob": "^11.0.3",
    "jest": "^29.2.1",
    "metro-react-native-babel-transformer": "^0.77.0",
    "minimatch": "^3.1.2",
    "react-test-renderer": "18.2.0",
    "serve": "^14.2.1",
    "typescript": "^5.1.3",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "keywords": [
    "react-native",
    "expo",
    "job-platform",
    "refopen",
    "mobile",
    "web"
  ],
  "author": "RefOpen Team",
  "license": "MIT"
}
