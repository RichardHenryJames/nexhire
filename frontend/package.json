{
  "name": "nexhire-frontend",
  "version": "1.0.0",
  "description": "NexHire Job Platform - Universal React Native App",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web --output-dir web-build --clear",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "deploy:web": "npm run build:web && swa deploy --app-location . --output-location web-build",
    "deploy:azure": "npm run build:web && az staticwebapp deploy --name nexhire-frontend-web --resource-group nexhire-dev-rg --source ./web-build",
    "test": "jest",
    "test:frontend": "powershell -ExecutionPolicy Bypass -File ../test-frontend.ps1",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf web-build dist node_modules/.cache",
    "preview": "npm run build:web && npx serve web-build",
    "analyze": "npm run build:web && npx bundle-analyzer web-build/static/js/*.js"
  },
  "dependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "axios": "^1.6.0",
    "expo": "~49.0.0",
    "expo-constants": "~14.4.2",
    "expo-document-picker": "~11.5.4",
    "expo-file-system": "~15.4.5",
    "expo-image-picker": "~14.3.2",
    "expo-linear-gradient": "~12.3.0",
    "expo-linking": "~5.0.2",
    "expo-router": "^2.0.0",
    "expo-secure-store": "~12.3.1",
    "expo-status-bar": "~1.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.6",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "^4.0.2",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-svg": "^13.9.0",
    "react-native-web": "~0.19.6"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^1.1.7",
    "@babel/core": "^7.20.0",
    "@testing-library/react-native": "^11.5.4",
    "@types/react": "~18.2.14",
    "eslint": "^8.57.0",
    "jest": "^29.2.1",
    "react-test-renderer": "18.2.0",
    "serve": "^14.2.1",
    "typescript": "^5.1.3",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "keywords": [
    "react-native",
    "expo",
    "job-platform",
    "nexhire",
    "mobile",
    "web"
  ],
  "author": "NexHire Team",
  "license": "MIT"
}
