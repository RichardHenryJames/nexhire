{
  "name": "nexhire-backend-api",
  "version": "1.0.0",
  "description": "NexHire Job Platform Backend APIs - Azure Functions",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prestart": "npm run build",
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:registration": "ts-node tests/run-registration-tests.ts",
    "test:registration-only": "jest tests/complete-registration-flow.test.ts --verbose",
    "test:profile-update": "jest tests/profile-update-flow.test.ts --verbose",
    "test:api-integration": "jest tests/frontend-api-integration.test.ts --verbose",
    "test:all-flows": "npm run test:registration-only && npm run test:profile-update && npm run test:api-integration",
    "deploy:backend": "func azure functionapp publish nexhire-api-func --typescript --build local --force",
    "deploy": "npm run deploy:backend",
    "postinstall": "echo 'NexHire Backend API installed successfully'"
  },
  "dependencies": {
    "@azure/functions": "^4.5.0",
    "@azure/service-bus": "^7.9.4",
    "@azure/storage-blob": "^12.17.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mssql": "^9.1.7",
    "@types/uuid": "^9.0.8",
    "@types/node": "^20.10.5",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mssql": "^10.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "typescript": "^5.9.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "azure-functions-core-tools": "^4.0.5455",
    "eslint": "^9.33.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "keywords": [
    "azure-functions",
    "job-platform",
    "rest-api",
    "nodejs",
    "sql-server"
  ],
  "author": "NexHire Team",
  "license": "MIT"
}
